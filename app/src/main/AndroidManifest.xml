<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tom.foodbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CanteensListActivity"
            android:label="List of Canteens"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name=".CleverFilterActivity"
            android:label="Clever filter of Food" />
        <activity
            android:name=".NutritionFormActivity"
            android:label="Nutrition values form" />
        <activity
            android:name=".CanteenOverviewActivity"
            android:label="overview of all canteens" />
        <activity
            android:name=".FoodOverviewActivity"
            android:label="overview of all canteens" />
        <activity
            android:name=".BMI"
            android:label="BMI calculator" />
    </application>

</manifest>